alias ?='expr'
alias ?t='type'
alias ?x='set -x'
alias ?X='set +x'
alias +x='chmod +x'

alias readln='IFS= read'

alias W='watch '
Wf() {
    watch -x bash -i -c "$@"
}

watcher() {
	[ $# -gt 1 ] || return 1
	buffer=$(mktemp)
	interval=$1; shift
	cmd="$@"
	
	while true; do
		{ time eval $cmd 2>&1; } > $buffer
		
		clear
		echo \"$cmd\"
		cat $buffer
		
		[ $interval -gt 0 ] \
			&& sleep $interval \
			|| read
	done
}
