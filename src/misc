alias rot13="tr 'A-Za-z' 'N-ZA-Mn-za-m'"
alias rot31="tr 'N-ZA-Mn-za-m5-90-4' 'A-Za-z0-9'"

alias wfl="tail -f /tmp/wflog"

alias ytd='youtube-dl'
alias ytdm='ytd -x --audio-format mp3'

ytdmp() {
	ytd --get-id $1 | \
		xargs -I '{}' -P 5 youtube-dl -x --audio-format mp3 '{}'
}

hex() {
	printf '%x' "'$1'"
}
