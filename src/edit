alias e='nvim'
alias E='doas nvim'
alias ep='nvimpager'

alias ec='em ~f/cfg'
alias eC='em ~/.config'
alias eb='em ~f/bin'
alias eB='em ~/.local/bin'
alias er='em ~f/run'

es() {
	em ~f/src $1
	or ret!

	. $match && put ~f/run/spool . $match
}

em() {
	argc 1 && { cr $1; ret; }

	ff f $2 $1
	and e $match
	and ret
	
	ff d $2 $1 
	and cr $match
	and ret
	
	err "No matches for $2/$1*"
	ret!
}

ef() {
	arg! ret!
	fn? $1 || ret!

	e $fnf +$fnl -c 'norm zz'
	. $fnf && put ~f/run/spool . $fnf
}
