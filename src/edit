alias e='nvim'

er() {
	e $(realpath $1)
}

ee() {
	for match in $1*; do
		[ -f $match ] && er $match
		break
	done;
}

em() {
	[ $# -ne 1 ] && cd ${_DOT}/src && return
	for match in ${_DOT}/src/$1*; do
		[ -f $match ] && er $match && source $match
		break
	done;
}

alias ec='_ec  ${_DOT}/cfg'
alias eC='_ec ~/.config'
_ec() {
	local base=$1
	shift
	[ $# -eq 0 ] && cd $base && return
	for match in ${base}/${1}*; do
		er $match
		break
	done;
}
