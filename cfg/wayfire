[core]
plugins = \
	alpha \
	autostart \
	command \
	animate \
	cube \
	fast-switcher \
	invert \
	move \
	place \
	resize \
	rounded-corners \
	simple-tile \
	vswitch \
	wallpaper \
	window-rules \
	wf-info \
	wm-actions \
	wobbly \
	zoom

close_top_view = <super> KEY_C
vwidth = 4
vheight = 1 

[wm-actions]
toggle_fullscreen = <super> KEY_F
toggle_sticky = <super> KEY_S
toggle_always_on_top = <super> KEY_H

[invert]
toggle = <super> KEY_I

[wallpaper:a]
path = /home/safe/wall/roll.jpeg
workspaces = 0

[wallpaper:b]
path = /home/safe/wall/hex.jpeg
workspaces = 1

[wallpaper:c]
path = /home/safe/wall/dhe.jpeg
workspaces = 2

[wallpaper:d]
path = /home/safe/wall/liquid.jpeg
workspaces = 3

[move]
activate = <super> BTN_LEFT

[resize]
activate = <super> BTN_RIGHT

[zoom]
modifier = <super>

[alpha]
modifier = <super> <ctrl>

[autostart]
notifications = mako

[simple-tile]
animation_duration = 0
inner_gap_size = 8
outer_horiz_gap_size = 128
outer_vert_gap_size = 16

[fast-switcher]
activate = <super> KEY_SPACE
inactive_alpha = 0.0001

[vswitch]
with_win_left = <super> <shift> KEY_RIGHT
with_win_right = <super> <shift> KEY_DOWN

[cube]
rotate_right = <super> KEY_DOWN
rotate_left = <super> KEY_RIGHT
activate = <ctrl> <alt> BTN_LEFT

[command]
binding_terminal = <super> KEY_ENTER
command_terminal = kitty

binding_launcher = <super> KEY_D
command_launcher = dmenu_run

binding_code = <super> KEY_5
command_code = code

binding_web = <super> KEY_6
command_web = chromium

binding_music = <super> KEY_8
command_music = youtube-music

binding_date = <super> KEY_0
command_date = notify-send -t 3000 "$(date)"

binding_screenshot = <super> <shift> KEY_P
command_screenshot = slurp | grim -g - $(date '+%F_%T').jpeg

repeatable_binding_volume_up = KEY_VOLUMEUP
repeatable_binding_volume_down = KEY_VOLUMEDOWN
command_volume_up = amixer set Master 5%+
command_volume_down = amixer set Master 5%-
binding_mute = KEY_MUTE
command_mute = amixer set Master toggle

[window-rules]
alpha_code = on created if app_id is "Code" then set alpha 0.9
alpha_ytm = on created if app_id is "YouTube Music" then set alpha 0.8
alpha_blanket = on created if app_id is "com.rafaelmardojai.Blanket" then set alpha 0.8
