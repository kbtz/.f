V = false
vars = {
	defaults = {
		lines = true,
		chars = true,
		charsAlt = false,
		tabs = true,
		tabsAlt = false,
	},
	reset = function()
		V = vars.defaults
		vars.apply()
	end,
	save = function()
		vim.g.VARS = V
	end,
	apply = function()
		V = V or vim.g.VARS
		tabSize = V.tabsAlt and 4 or 2

		opt {
			list = V.chars,
			expandtab = V.tabs,
			tabstop/tabSize,
			shiftwidth/tabSize,
			number = V.lines,
			relativenumber = V.lines,
		}

		colors()
	end,
	toggle = meta({}, {
		__call = function(_, var)
			name = tostring(var)
			V[name] = not V[name]
			vars.apply()
      print(V[name] and 'V' or 'F', name)
		end,
		__index = function(_, var)
			return function() vars.toggle(var) end
		end
	}),
}
